<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOŞ GELDİNİZ!"
        android:textColor="#477C5D"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_calculate_calorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalori Hesapla"
        android:backgroundTint="#8BC34A"
        android:layout_below="@id/text_welcome"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="openKaloriHesaplaActivity"/>

    <Button
        android:id="@+id/btn_calculate_bmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#8BC34A"
        android:text="Vücut Kitle İndeksi Hesapla"
        android:layout_below="@id/btn_calculate_calorie"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="openVucutKitleIndexActivity"/>
    <Button
        android:id="@+id/btn_fitness_exercises"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fitness Hareketleri"
        android:backgroundTint="#8BC34A"
        android:layout_below="@id/btn_calculate_bmi"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:onClick="openFitnessExercisesActivity"/>


</RelativeLayout>

